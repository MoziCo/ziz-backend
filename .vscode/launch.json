{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Uvicorn (Poetry)",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app", // Adjust this to the project app
                "--reload"
            ],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/backend/.env"
        },
        {
            "name": "Python: Debug Tests", // Used by pytest Test Explorer to debug packages code
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "purpose": ["debug-test"]
          },
    ]
}